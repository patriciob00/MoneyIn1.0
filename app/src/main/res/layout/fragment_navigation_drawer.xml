<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    tools:context="com.mycompany.moneyin.NavigationDrawerFragment">

   <!-- Layout que contem a imagem -->
    <LinearLayout
        android:id="@+id/containerDrawerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <!--Inserindo uma imagem ao Navigation Drawer -->
        <ImageView
            android:layout_width="383dp"
            android:layout_height="175dp"
            android:background="@drawable/ultimatematerial"
            android:contentDescription="@string/descriçãoImagem"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/containerDrawerImage"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
